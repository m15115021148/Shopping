<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    tools:context=".ui.AccountActivity">


    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x40"
        android:background="@color/white"
        android:paddingStart="@dimen/x40"
        android:paddingEnd="@dimen/x40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="@dimen/x32" />

        <com.geek.shopping.view.MyImageView
            android:id="@+id/header"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:layout_toStartOf="@+id/img"
            android:src="@drawable/head_defaut" />

        <com.geek.shopping.view.MyImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_e3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nickNameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@color/white"
        android:paddingStart="@dimen/x40"
        android:paddingEnd="@dimen/x40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/nickName"
            android:textSize="@dimen/x32"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:layout_toStartOf="@+id/img1"
            android:src="@drawable/head_defaut" />

        <com.geek.shopping.view.MyImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sexLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x40"
        android:background="@color/white"
        android:paddingStart="@dimen/x40"
        android:paddingEnd="@dimen/x40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/sex"
            android:textSize="@dimen/x32"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:layout_toStartOf="@+id/img2"
            android:src="@drawable/head_defaut" />

        <com.geek.shopping.view.MyImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

    </RelativeLayout>

</LinearLayout>